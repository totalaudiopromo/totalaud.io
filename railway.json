{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm build --filter=aud-web",
    "watchPatterns": [
      "apps/aud-web/**",
      "packages/**",
      "pnpm-lock.yaml",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/aud-web && pnpm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100
  }
}
